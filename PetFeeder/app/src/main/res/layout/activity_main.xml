<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/foodCard"
        android:layout_width="399dp"
        android:layout_height="300dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/light_orange"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:text="Food"
                android:textColor="@color/brown"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/textDaiObjFood"
                android:text="Daily objective X"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/foodAmountCard"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginVertical="80dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textActualAmountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Actual food amount:"
                        android:textColor="@color/brown"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textActualAmount"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textActualAmountLabel"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="14dp"
                        android:text="--g"
                        android:textColor="@color/orange"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageFood"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/food_image" />

            <Button
                android:id="@+id/addFood"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"
                android:backgroundTint="@color/brown"
                android:text="add 15g" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="220dp"
                android:backgroundTint="@color/brown"
                app:srcCompat="@drawable/baseline_edit_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="399dp"
        android:layout_height="30dp"
        android:layout_marginVertical="310dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Searching device..."
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/waterCard"
        android:layout_width="399dp"
        android:layout_height="300dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        android:layout_below="@id/foodCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:text="Water"
                android:textColor="@color/blue"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/textDaiObjWater"
                android:text="Daily objective X"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageWater"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/water_image" />

            <Button
                android:id="@+id/addWater"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"
                android:backgroundTint="@color/blue"
                android:text="add 50ml" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="220dp"
                android:backgroundTint="@color/blue"
                app:srcCompat="@drawable/baseline_edit_24" />

            <androidx.cardview.widget.CardView
                android:id="@+id/foodamountCard"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginVertical="80dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp"> <!-- Cambiado para posicionar por encima -->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textActualAmountWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Actual water amount:"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textActualWaterAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_below="@id/textActualAmountWater"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="9dp"
                        android:text="--ml"
                        android:textColor="@color/medium_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/teal_700"
        android:elevation="0dp"
        app:itemIconSize="23dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemTextColor="@drawable/text_selector"
        app:itemRippleColor="@color/orange"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>
